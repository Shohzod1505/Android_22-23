<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/tb_second_fragment_bar"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:contentScrim="@color/purple_500"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|snap"
                app:toolbarId="@id/tb_info">

                <ImageView
                    android:id="@+id/iv_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder"
                    android:scaleType="fitXY"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax" />

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/tb_info"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/menu_toolbar" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Film information"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_info_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_info"
        app:layout_constraintStart_toStartOf="@+id/tv_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_info"
        tools:text="ID: 0" />

    <TextView
        android:id="@+id/tv_info_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_info_id"
        app:layout_constraintStart_toStartOf="@+id/tv_info_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_info_id"
        tools:text="Name: Film" />

    <TextView
        android:id="@+id/tv_info_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_info_title"
        app:layout_constraintStart_toStartOf="@+id/tv_info_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_info_title"
        tools:text="Year: 2003" />

    <TextView
        android:id="@+id/tv_info_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_info_year"
        app:layout_constraintStart_toStartOf="@+id/tv_info_year"
        app:layout_constraintTop_toBottomOf="@+id/tv_info_year"
        tools:text="Genre: horror, comedy, drama" />

    <TextView
        android:id="@+id/tv_info_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_info_genre"
        app:layout_constraintStart_toStartOf="@+id/tv_info_genre"
        app:layout_constraintTop_toBottomOf="@+id/tv_info_genre"
        tools:text="Rate: 6.9" />


</androidx.constraintlayout.widget.ConstraintLayout>